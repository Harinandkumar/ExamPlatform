<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-gray-100 min-h-screen font-sans">

  <div class="max-w-5xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-center text-gray-800 mb-8">Results</h1>

    <div class="overflow-x-auto">
      <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-200">
          <tr>
            <th class="px-4 py-2 text-left">Name</th>
            <th class="px-4 py-2 text-left">Roll</th>
            <th class="px-4 py-2 text-left">Exam</th>
            <th class="px-4 py-2 text-left">Score</th>
            <th class="px-4 py-2 text-left">Total</th>
            <th class="px-4 py-2 text-left">Time</th>
            <th class="px-4 py-2 text-left">Action</th>
          </tr>
        </thead>
        <tbody>
          <% results.forEach(r => { %>
          <tr class="border-b hover:bg-gray-50">
            <td class="px-4 py-2">
              <a href="/admin/results/<%= r._id %>" class="text-blue-600 hover:underline">
                <%= r.name %>
              </a>
            </td>
            <td class="px-4 py-2"><%= r.roll %></td>
            <td class="px-4 py-2"><%= r.exam?.title || 'Deleted' %></td>
            <td class="px-4 py-2"><%= r.score %></td>
            <td class="px-4 py-2"><%= r.total %></td>
            <td class="px-4 py-2"><%= r.submittedAt.toLocaleString() %></td>
            <td class="px-4 py-2">
              <form action="/admin/results/<%= r._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this result?');">
                <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition-colors">
                  Delete
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

   
  </div>

</body>
</html>
