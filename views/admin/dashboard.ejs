<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>
<body class="bg-gray-100 font-sans min-h-screen">

  <%- include('../partials/nav') %>

  <div class="max-w-5xl mx-auto py-10 px-4">
    <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">Admin Dashboard</h1>

    <div class="flex justify-center space-x-4 mb-8">
      <a href="/admin/exams/new" 
         class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 transition-colors">
        + Create Exam
      </a>
      <a href="/admin/results" 
         class="bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors">
        View Results
      </a>
    </div>

    <% if (exams.length === 0) { %>
      <p class="text-center text-gray-600">No exams available yet.</p>
    <% } else { %>
      <div class="overflow-x-auto">
        <table class="w-full bg-white shadow-md rounded-lg overflow-hidden">
          <thead class="bg-gray-200 text-gray-700">
            <tr>
              <th class="py-3 px-4 text-left">Exam Title</th>
              <th class="py-3 px-4 text-left">Duration (min)</th>
              <th class="py-3 px-4 text-center">Status</th>
              <th class="py-3 px-4 text-center">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% exams.forEach(e => { %>
              <tr class="border-b hover:bg-gray-50 transition">
                <td class="py-3 px-4 font-medium text-gray-900"><%= e.title %></td>
                <td class="py-3 px-4 text-gray-700"><%= e.duration %></td>
                <td class="py-3 px-4 text-center">
                  <% if (e.isActive) { %>
                    <span class="text-green-600 font-semibold">Active</span>
                  <% } else { %>
                    <span class="text-red-500 font-semibold">Inactive</span>
                  <% } %>
                </td>
                <td class="py-3 px-4 text-center space-x-2">
                  <form method="post" action="/admin/exams/<%= e._id %>/toggle" class="inline">
                    <button class="bg-yellow-500 text-white px-3 py-1 rounded hover:bg-yellow-600 transition">
                      Toggle
                    </button>
                  </form>

                  <a href="/admin/exams/<%= e._id %>/questions"
                     class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600 transition">
                    Questions
                  </a>

                  <form method="post" action="/admin/exams/<%= e._id %>?_method=DELETE" 
                        class="inline" 
                        onsubmit="return confirm('Are you sure you want to delete this exam?');">
                    <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600 transition">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

</body>
</html>
